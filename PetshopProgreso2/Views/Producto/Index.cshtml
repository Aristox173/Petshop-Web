@model IEnumerable<PetshopProgreso2.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>PRODUCTOS</h1>

<p>
    <a asp-action="Create">Ingresar Nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Precio
            </th>
            <th>
                Cantidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                    @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "bi bi-pencil-square iconoEditar fa-2x" })
                    @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "bi bi-eye iconoVer fa-2x" })
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "bi bi-trash3-fill iconoBorrar fa-2x" })
            </td>
        </tr>
}
    </tbody>
</table>
