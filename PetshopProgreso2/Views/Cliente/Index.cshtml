@model IEnumerable<PetshopProgreso2.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>CLIENTES</h1>

<p>
    <a asp-action="Create">Ingresar Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Cédula
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Correo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "bi bi-pencil-square iconoEditar fa-2x" })
                    @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "bi bi-eye iconoVer fa-2x" })
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "bi bi-trash3-fill iconoBorrar fa-2x" })
            </td>
        </tr>
}
    </tbody>
</table>